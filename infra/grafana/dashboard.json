{
  "dashboard": {
    "title": "Sovereign Robotics Ops",
    "uid": "sovereign-robotics",
    "panels": [
      {
        "id": 1,
        "title": "Governance Decisions",
        "type": "stat",
        "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "sum(governance_decisions_total)"
          }
        ]
      },
      {
        "id": 2,
        "title": "Approval Rate",
        "type": "gauge",
        "gridPos": { "x": 6, "y": 0, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "sum(governance_decisions_total{approved=\"true\"}) / sum(governance_decisions_total) * 100"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                { "value": 0, "color": "red" },
                { "value": 70, "color": "yellow" },
                { "value": 90, "color": "green" }
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Average Risk Score",
        "type": "gauge",
        "gridPos": { "x": 12, "y": 0, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "avg(governance_risk_score)"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 1,
            "thresholds": {
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 0.4, "color": "yellow" },
                { "value": 0.7, "color": "red" }
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Policy Violations",
        "type": "stat",
        "gridPos": { "x": 18, "y": 0, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "sum(policy_violations_total)"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "thresholds" },
            "thresholds": {
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 10, "color": "yellow" },
                { "value": 50, "color": "red" }
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Decisions Over Time",
        "type": "timeseries",
        "gridPos": { "x": 0, "y": 4, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "rate(governance_decisions_total[5m])",
            "legendFormat": "{{approved}}"
          }
        ]
      },
      {
        "id": 6,
        "title": "Risk Score Distribution",
        "type": "histogram",
        "gridPos": { "x": 12, "y": 4, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "governance_risk_score"
          }
        ]
      },
      {
        "id": 7,
        "title": "Violations by Policy",
        "type": "piechart",
        "gridPos": { "x": 0, "y": 12, "w": 8, "h": 8 },
        "targets": [
          {
            "expr": "sum by (policy_id) (policy_violations_total)"
          }
        ]
      },
      {
        "id": 8,
        "title": "Active Robots",
        "type": "stat",
        "gridPos": { "x": 8, "y": 12, "w": 4, "h": 4 },
        "targets": [
          {
            "expr": "count(up{job=\"robot\"})"
          }
        ]
      },
      {
        "id": 9,
        "title": "Policy Evaluation Latency",
        "type": "timeseries",
        "gridPos": { "x": 12, "y": 12, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "histogram_quantile(0.99, governance_evaluation_duration_seconds_bucket)",
            "legendFormat": "p99"
          },
          {
            "expr": "histogram_quantile(0.50, governance_evaluation_duration_seconds_bucket)",
            "legendFormat": "p50"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s"
          }
        }
      }
    ]
  }
}
